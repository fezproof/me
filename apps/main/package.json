{
  "name": "@apps/main",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "npm run build:css && remix build",
    "build:css": "tailwindcss -m -i ./app/styles/styles.css -o app/styles/app.css",
    "deploy": "wrangler publish",
    "dev:remix": "remix watch",
    "dev:wrangler": "wrangler dev ./build/index.js --local",
    "dev:css": "tailwindcss -w -i ./app/styles/styles.css -o app/styles/app.css",
    "dev": "cross-env NODE_ENV=development remix build && run-p \"dev:*\"",
    "start": "cross-env NODE_ENV=production wrangler dev ./build/index.js --local"
  },
  "dependencies": {
    "@react-three/drei": "^9.32.7",
    "@react-three/fiber": "^8.8.8",
    "@remix-run/cloudflare": "^1.7.2",
    "@remix-run/cloudflare-workers": "^1.7.2",
    "@remix-run/react": "^1.7.2",
    "@tanstack/react-query": "^4.12.0",
    "@trpc/client": "^10.0.0-proxy-beta.20",
    "@trpc/server": "^10.0.0-proxy-beta.20",
    "@worker/planning": "^0.0.0",
    "classnames": "^2.3.2",
    "cross-env": "^7.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "three": "^0.145.0",
    "uuid": "^9.0.0",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.14.1",
    "@remix-run/dev": "^1.7.2",
    "@remix-run/eslint-config": "^1.7.2",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "@types/three": "^0.144.0",
    "@types/uuid": "^8.3.4",
    "autoprefixer": "^10.4.12",
    "concurrently": "^7.4.0",
    "eslint": "^8.20.0",
    "miniflare": "^2.6.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.17",
    "tailwindcss": "^3.1.8",
    "turbo": "^1.5.5",
    "typescript": "^4.7.4",
    "wrangler": "2.1.9"
  },
  "engines": {
    "node": ">=14"
  },
  "workspaces": [
    "workers/*"
  ]
}
